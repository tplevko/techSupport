<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Add Support for Spring -->
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
    <listener>
        <listener-class>
            org.springframework.web.context.request.RequestContextListener
        </listener-class>
    </listener>
    
    <!-- configuration of recaptcha -->
    <context-param>
        <param-name>primefaces.PUBLIC_CAPTCHA_KEY</param-name>
        <param-value>6Lf7SvESAAAAAIeYamuaysXIrRXk0vpwKYOSfAXm</param-value>
    </context-param>

    <context-param>
        <param-name>primefaces.PRIVATE_CAPTCHA_KEY</param-name>
        <param-value>6Lf7SvESAAAAAH_fnypV8ZJVLSzzbV1zOPupv5Dx</param-value>
    </context-param>
    <!-- ########################## -->

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/application-context.xml
            /WEB-INF/security-context.xml
        </param-value>
    </context-param>
    
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    
    
    <!-- ############# EXAMPLE ################# -->
    <servlet>
        <servlet-name>Example Servlet</servlet-name>
        <servlet-class>cz.muni.fi.tplevko.secureappexample.managedbeans.security.EmailValidationClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Example Servlet</servlet-name>
        <url-pattern>/Email</url-pattern>
